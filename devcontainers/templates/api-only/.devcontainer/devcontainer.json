// API-only workspace layering AirNub base template plus Supabase helpers
{
  "name": "AirNub API Workspace",
  "dockerComposeFile": [
    "../base/.devcontainer/docker-compose.yml",
    "docker-compose.override.yml"
  ],
  "service": "workspace",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "mounts": [
    "source=global-pnpm-store,target=/pnpm/store,type=volume",
    "source=supabase-state,target=/workspaces/supabase,type=volume"
  ],
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "vscode",
      "upgradePackages": false
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "24",
      "pnpmVersion": "10.0.0",
      "nodeGypDependencies": true
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": true,
      "version": "latest"
    },
    "file:../../features/docker-in-docker-helpers": {},
    "file:../../features/supabase-stack": {}
  },
  "forwardPorts": [
    3000,
    3100,
    54321,
    54322,
    54323,
    54324,
    54326,
    54327,
    6379
  ],
  "postCreateCommand": "supabase status || true",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "supabase.supabase-vscode",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "pnpm.storeDir": "/pnpm/store",
        "python.defaultInterpreterPath": "/usr/local/python/current/bin/python"
      }
    }
  }
}
