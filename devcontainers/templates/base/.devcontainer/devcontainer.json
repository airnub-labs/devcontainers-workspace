// Base AirNub workspace dev container
{
  "name": "AirNub Base Workspace",
  "dockerComposeFile": [
    "docker-compose.yml"
  ],
  "service": "workspace",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "mounts": [
    "source=global-pnpm-store,target=/pnpm/store,type=volume"
  ],
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "vscode",
      "upgradePackages": false
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "24",
      "pnpmVersion": "10.0.0",
      "nodeGypDependencies": true
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    },
    "ghcr.io/airnub-labs/devcontainers/features/agent-tooling-clis:latest": {
      "installCodex": true,
      "installClaude": true,
      "installGemini": false
    }
  },
  "postCreateCommand": ".devcontainer/postCreate.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "pnpm.storeDir": "/pnpm/store",
        "python.defaultInterpreterPath": "/usr/local/python/current/bin/python"
      }
    }
  }
}
