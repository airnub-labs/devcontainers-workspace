// Full GUI workspace layering AirNub base template plus GUI providers
{
  "name": "AirNub Full GUI Workspace",
  "dockerComposeFile": [
    "../base/.devcontainer/docker-compose.yml",
    "docker-compose.override.yml"
  ],
  "service": "workspace",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "mounts": [
    "source=global-pnpm-store,target=/pnpm/store,type=volume",
    "source=gui-profiles,target=/home/vscode/.config/gui,type=volume"
  ],
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "vscode",
      "upgradePackages": false
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "24",
      "pnpmVersion": "10.0.0",
      "nodeGypDependencies": true
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": true,
      "version": "latest"
    },
    "ghcr.io/airnub-labs/devcontainers/features/docker-in-docker-helpers:latest": {},
    "ghcr.io/airnub-labs/devcontainers/features/gui-tooling:latest": {}
  },
  "forwardPorts": [
    3000,
    3100,
    6080,
    6081,
    9222
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-vscode-remote.remote-containers",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "pnpm.storeDir": "/pnpm/store",
        "python.defaultInterpreterPath": "/usr/local/python/current/bin/python",
        "remote.autoForwardPorts": false
      }
    }
  }
}
