{
  "id": "gui-tooling",
  "version": "0.1.0",
  "name": "GUI tooling",
  "description": "Configures GUI-related container profiles and env vars for the AirNub workspace.",
  "documentationURL": "https://github.com/airnub-labs/vscode-meta-workspace-internal/blob/main/docs/feature-catalog.md#gui-tooling",
  "options": {
    "providers": {
      "type": "string",
      "default": "webtop",
      "description": "Comma-separated list of GUI providers to enable (novnc, webtop, chrome, or all)."
    }
  },
  "containerEnv": {
    "CHROME_CDP_URL": "http://127.0.0.1:9222",
    "CHROME_HEADLESS": "false",
    "CHROME_ISOLATED": "false",
    "CHROME_CHANNEL": "stable",
    "GUI_PROVIDERS": "${localEnv:GUI_PROVIDERS}",
    "WEBTOP_AUDIO": "${localEnv:WEBTOP_AUDIO}",
    "GUI_CHROME_DEBUG": "${localEnv:GUI_CHROME_DEBUG}",
    "GUI_NOVNC_HTTP_PORT": "${localEnv:GUI_NOVNC_HTTP_PORT}",
    "GUI_WEBTOP_HTTPS_PORT": "${localEnv:GUI_WEBTOP_HTTPS_PORT}",
    "GUI_CHROME_HTTPS_PORT": "${localEnv:GUI_CHROME_HTTPS_PORT}",
    "GUI_NOVNC_DEVTOOLS_PORT": "${localEnv:GUI_NOVNC_DEVTOOLS_PORT}",
    "GUI_WEBTOP_DEVTOOLS_PORT": "${localEnv:GUI_WEBTOP_DEVTOOLS_PORT}",
    "GUI_CHROME_DEVTOOLS_PORT": "${localEnv:GUI_CHROME_DEVTOOLS_PORT}",
    "WEBTOP_USER": "${localEnv:WEBTOP_USER}",
    "WEBTOP_PASSWORD": "${localEnv:WEBTOP_PASSWORD}",
    "CHROME_USER": "${localEnv:CHROME_USER}",
    "CHROME_PASSWORD": "${localEnv:CHROME_PASSWORD}",
    "DEFAULT_TZ": "${localEnv:DEFAULT_TZ}",
    "DEFAULT_LOCALE": "${localEnv:DEFAULT_LOCALE}",
    "DEFAULT_LANGUAGE": "${localEnv:DEFAULT_LANGUAGE}"
  },
  "updateContentCommand": "bash -lc 'GUI_PROVIDERS=\"${GUI_PROVIDERS:-{{providers}}}\" /usr/local/share/devcontainer/features/gui-tooling/bin/update-profiles.sh'"
}
